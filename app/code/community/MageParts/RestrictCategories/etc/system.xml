<config>
	<tabs>
        <mageparts translate="label" module="core">
            <label>MageParts</label>
            <sort_order>9999999</sort_order>
        </mageparts>
    </tabs>
	<sections>
		<restrictcategories translate="label" module="restrictcategories">
            <class>separator-top</class>
            <label>Restrict Categories</label>
            <tab>mageparts</tab>
            <sort_order>605</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
			<groups>
				<general translate="label" module="restrictcategories">
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                	<fields>
                		<enabled translate="label" module="restrictcategories">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <restrict_products translate="label" module="restrictcategories">
                            <label>Restrict Products In Restricted Categories</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </restrict_products>
                        <error_redirect_page translate="label" module="restrictcategories">
                            <label>Denied Access Redirect Page</label>
                            <comment>if a customer is denied access to a category page, they will be redirected to the page specified in this setting</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_cms_page</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </error_redirect_page>
               		</fields>
           		</general>
           		<cache translate="label" module="restrictcategories">
                    <label>Cache Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                	<fields>
                		<enabled translate="label" module="restrictcategories">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
               		</fields>
           		</cache>
        	</groups>
		</restrictcategories>
	</sections>
</config>