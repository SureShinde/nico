<?xml version="1.0"?>
<config>
    <tabs>
        <halox_settings translate="label" module="ageverification">
            <label>Halox Settings</label>
            <sort_order>0</sort_order>
        </halox_settings>
    </tabs>
    <sections>
        <age_verify_general  translate="label" module="ageverification">                    
            <label>Age Verification</label>
            <tab>halox_settings</tab>
            <frontend_type>text</frontend_type>
            <sort_order>0</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>            
            <groups>
                <api_info translate="label"> 
                    <label>API Details</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <veratad_username translate="label">
                            <label>Veratad Username</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enter Verated Username</comment>
                        </veratad_username>
                        <veratad_password translate="label">
                            <label>Veratad Password</label>
                            <frontend_type>password</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enter Verated Password</comment>
                        </veratad_password>
                        <veratad_service_name translate="label">
                            <label>Veratad Service Name</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enter Verated Service name</comment>
                        </veratad_service_name>
                        <veratad_uti translate="label">
                            <label>Veratad Unique Transaction Identifier</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </veratad_uti>
                        <veratad_destination_url translate="label">
                            <label>Veratad destination URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </veratad_destination_url>
                    </fields>
                </api_info>
                <ageverification_options translate="label"> 
                    <label>Verification Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <is_age_ageverification_enabled translate="label">
                            <label>Enable Age Verification</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Select yes or no to enable or disable age ageverification</comment>
                        </is_age_ageverification_enabled>
                         <test translate="label">
                            <label>Test Mode</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Select yes or no to enable or disable debugging mode</comment>
                        </test>
                         <api_curl_log translate="label">
                            <label>Enable Log</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Select yes or no to enable or disable curl request log</comment>
                        </api_curl_log>
                    </fields>
                </ageverification_options>
            </groups>
        </age_verify_general>
    </sections>
</config>
