<?xml version="1.0"?>
<config>
	<sections>
		<halox_bulkorder translate="label">
			<tab>halox_settings</tab>
			<label>Halox Bulk Order Form</label>
			<frontend_type>text</frontend_type>
			<sort_order>10</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<general_settings translate="label">
					<label>General</label>
					<frontend_type>text</frontend_type>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<enabled translate="label">
		                    <label>Extension Enabled</label>
		                    <frontend_type>select</frontend_type>
		                    <source_model>adminhtml/system_config_source_yesno</source_model>
		                    <sort_order>10</sort_order>
		                    <show_in_default>1</show_in_default>
		                    <show_in_website>1</show_in_website>
		                    <show_in_store>1</show_in_store>
		                </enabled>
		                <base_category_ids translate="label">
		                    <depends>
		                    	<enabled>1</enabled>
		                    </depends>
		                    <label>Base Category ID(s)</label>
		                    <comment>Comma seperated ID(s) of categories which will show Bulk Order form.</comment>
		                    <frontend_type>text</frontend_type>
		                    <sort_order>20</sort_order>
		                    <show_in_default>1</show_in_default>
		                    <show_in_website>1</show_in_website>
		                    <show_in_store>1</show_in_store>
		                </base_category_ids>
		            </fields>
				</general_settings>
			</groups>
		</halox_bulkorder>
	</sections>
</config>