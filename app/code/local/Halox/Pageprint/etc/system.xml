<?xml version="1.0"?>
<config>
    <tabs>
        <halox_settings translate="label" module="pageprint">
            <label>Halox Settings</label>
            <sort_order>0</sort_order>
        </halox_settings>
    </tabs>
    <sections>
        <printpage_general  translate="label" module="pageprint">                    
            <label>Page Print</label>
            <tab>halox_settings</tab>
            <frontend_type>text</frontend_type>
            <sort_order>0</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>            
            <groups>
                <pageprint_options translate="label"> 
                    <label>Page Print Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <pageprint_enabled translate="label">
                            <label>Enable Page Print</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Select yes or no to enable or disable pageprint</comment>
                        </pageprint_enabled>
                        <pageprint_cart_enabled translate="label">
                            <label>Cart Print</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>enable or disable print on cart</comment>
                        </pageprint_cart_enabled>
                        <pageprint_logo translate="label">
                            <label>Logo Image Path</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Logo image path inside media/wysiwyg directory</comment>
                        </pageprint_logo>
                        <pageprint_store_address translate="label">
                            <label>Store Address</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Address Text</comment>
                        </pageprint_store_address>
                    </fields>
                </pageprint_options>
            </groups>
        </printpage_general>
    </sections>
</config>
