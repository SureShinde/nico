<layout version="0.1.0">
    <default>
        <!-- update layout for all frontend page -->
        <reference name="top.links">
            <block type="storelocator/storelocator" name="storelocator">
                <action method="addTopLinkStores"/>
            </block>
        </reference>        
    </default>
    <storelocator_index_index>
         <reference name="head">
            <action method="addJs">
                <script>magestore/storelocator/markerclusterer_compiled.js</script>
            </action>
            <action method="addJs">
                <script>magestore/storelocator3.js</script>
            </action>            
            <action method="addJs">
                <script>scriptaculous/scriptaculous.js?load=slider</script>
            </action>
            <action method="addCss">
                <styleSheet>css/magestore/bootstrap.min.css</styleSheet>
            </action>
             <action method="addCss">
                <styleSheet>css/magestore/style-responsive.css</styleSheet>
            </action>
        </reference>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="storelocator/storelocator" name="styles" template="storelocator/styles.phtml" />
            <block type="storelocator/storelocator" name="list-storelocator" template="storelocator/storelocator1.phtml">                
            </block>            
        </reference>
    </storelocator_index_index>
    <storelocator_index_view>
        <reference name="head">
            <action method="addJs">
                <script>scriptaculous/scriptaculous.js?load=slider</script>
            </action>
            <action method="addJs">
                <script>magestore/easySlider1.7.js</script>
            </action>
            
<!--            <action method="addCss">
                <styleSheet>css/magestore/storelocator.css</styleSheet>
            </action>-->
            <action method="addCss">
                <styleSheet>css/magestore/bootstrap.min.css</styleSheet>
            </action>
             <action method="addCss">
                <styleSheet>css/magestore/style-responsive.css</styleSheet>
            </action>
        </reference>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="storelocator/storelocator" name="styles" template="storelocator/styles.phtml" />
            <block type="storelocator/storelocator" name="storelocator-view" template="storelocator/view_test.phtml">
            </block>          
        </reference>
    </storelocator_index_view>
  
</layout>